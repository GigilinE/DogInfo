<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend portal account details to include dog fields -->
        <template id="portal_my_details_dog_fields" inherit_id="portal.portal_my_details" name="Dog Information Fields">
            <xpath expr="//div[hasclass('row')][last()]" position="after">
                <t t-if="partner">
                    <div class="row">
                        <div class="col-lg-12">
                            <h4 class="mt-4 mb-3">Informazioni sul tuo cane</h4>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="form-group col-xl-6">
                            <label for="x_studio_dog_name">Nome del cane</label>
                            <input type="text" name="x_studio_dog_name" class="form-control" 
                                   t-att-value="partner.x_studio_dog_name or ''" placeholder="Inserisci il nome del tuo cane"/>
                        </div>
                    <div class="form-group col-xl-6">
                        <label for="x_studio_dog_breed">Razza del cane</label>
                        <select name="x_studio_dog_breed" class="form-control">
                            <option value="">Seleziona la razza</option>
                            <option value="akita" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'akita' else None">Akita</option>
                            <option value="alano" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'alano' else None">Alano</option>
                            <option value="barboncino" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'barboncino' else None">Barboncino</option>
                            <option value="bassethound" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'bassethound' else None">Basset Hound</option>
                            <option value="bassotto" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'bassotto' else None">Bassotto</option>
                            <option value="beagle" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'beagle' else None">Beagle</option>
                            <option value="bergamasco" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'bergamasco' else None">Pastore Bergamasco</option>
                            <option value="bichon" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'bichon' else None">Bichon Frisé</option>
                            <option value="border_collie" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'border_collie' else None">Border Collie</option>
                            <option value="boston_terrier" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'boston_terrier' else None">Boston Terrier</option>
                            <option value="boxer" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'boxer' else None">Boxer</option>
                            <option value="bracco" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'bracco' else None">Bracco Italiano</option>
                            <option value="bulldog_francese" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'bulldog_francese' else None">Bulldog Francese</option>
                            <option value="bulldog_inglese" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'bulldog_inglese' else None">Bulldog Inglese</option>
                            <option value="bull_terrier" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'bull_terrier' else None">Bull Terrier</option>
                            <option value="cane_corso" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'cane_corso' else None">Cane Corso</option>
                            <option value="carlino" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'carlino' else None">Carlino</option>
                            <option value="cavalier" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'cavalier' else None">Cavalier King Charles Spaniel</option>
                            <option value="chihuahua" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'chihuahua' else None">Chihuahua</option>
                            <option value="chow_chow" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'chow_chow' else None">Chow Chow</option>
                            <option value="cocker" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'cocker' else None">Cocker Spaniel</option>
                            <option value="collie" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'collie' else None">Collie</option>
                            <option value="dalmata" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'dalmata' else None">Dalmata</option>
                            <option value="dobermann" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'dobermann' else None">Dobermann</option>
                            <option value="dogo_argentino" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'dogo_argentino' else None">Dogo Argentino</option>
                            <option value="golden_retriever" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'golden_retriever' else None">Golden Retriever</option>
                            <option value="husky" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'husky' else None">Siberian Husky</option>
                            <option value="jack_russell" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'jack_russell' else None">Jack Russell Terrier</option>
                            <option value="labrador" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'labrador' else None">Labrador Retriever</option>
                            <option value="lagotto" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'lagotto' else None">Lagotto Romagnolo</option>
                            <option value="levriero" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'levriero' else None">Levriero</option>
                            <option value="maltese" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'maltese' else None">Maltese</option>
                            <option value="maremmano" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'maremmano' else None">Pastore Maremmano</option>
                            <option value="mastino" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'mastino' else None">Mastino Napoletano</option>
                            <option value="meticcio" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'meticcio' else None">Meticcio</option>
                            <option value="pastore_australiano" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'pastore_australiano' else None">Pastore Australiano</option>
                            <option value="pastore_tedesco" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'pastore_tedesco' else None">Pastore Tedesco</option>
                            <option value="pechinese" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'pechinese' else None">Pechinese</option>
                            <option value="pinscher" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'pinscher' else None">Pinscher</option>
                            <option value="pitbull" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'pitbull' else None">Pitbull</option>
                            <option value="pointer" t-att-selected="'selected' if (partner.x_studio_dog_breed or '') == 'pointer' else None">Pointer</option>
